<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#272A35"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/place_holder" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:gravity="center"
        android:background="#363943"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/padding_8dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:text="Author"/>
        <pl.bclogic.pulsator4droid.library.PulsatorLayout
            android:id="@+id/pulsator"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:pulse_duration="2000"
            android:layout_weight="1"
            app:pulse_color="@color/purple_500"
            app:pulse_startFromScratch="true"
            app:pulse_interpolator="Accelerate"/>
        <TextView
            android:id="@+id/txtTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="@dimen/padding_8dp"
            android:layout_weight="1"
            android:text="Translate"/>
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="@dimen/padding_8dp"
            android:layout_weight="1"
            android:text="Date"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="5sp"
            android:padding="5dp"
            android:text="Modern tools and resources to help you build experiences that people love, faster and easier, across every Android device."
            android:textColor="#EAEAEA"
            android:textSize="17sp" />




        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="6sp"
            android:padding="6dp"
            android:text="As Android developers, we are all driven by building experiences that delight people around the world. And with people depending on your apps more than ever, expectations are higher and your jobs as As Android developers, we are all driven by building experiences that delight people around the world. And with people depending on your apps more than ever, expectations are higher and your jobs as As Android developers, we are all driven by building experiences that delight people around the world. And with people depending on your apps more than ever, expectations are higher and your jobs as As Android developers, we are all driven by building experiences that delight people around the world. And with people depending on your apps more than ever, expectations are higher and your jobs as Meet the OS thatâ€™s optimised for how you use your phone. Helping you to manage conversations. And organising your day. With even more tools and privacy controls that put you in charge."
            android:textColor="#A6A6A6" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>
